<% if user_signed_in? %>
  <%= render :partial => 'items/form', :locals => { :item => @item, :remote => true } %>
  <% if current_user.items.empty? %>
    <h3 style="clear:both">Time to add some items</h3>
  <% else %>
    <%= render :partial => 'items/items' %>
  <% end %>


<% else %>

  <div class="home-page">
    <h2 class= 'text'>Get the most out of your fridge.</h2>
    <img src="fridge.jpeg" alt="Fridge" class="promo"/>
    <%= link_to "Add Items", new_item_path, :class => 'btn btn-primary btn-large homepage-btn' %>
  </div>
<% end %>

<div class="modal hide" id="myModal">
  <div class="modal-header">
    <h3>C'mon now</h3>
  </div>
  <div class="modal-body">
	<iframe name="myiFrame" src="/images/new" class="span12" id="image-frame"></iframe>
  </div>
  <div class="modal-footer">
  </div> 
</div>



