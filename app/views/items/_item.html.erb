<li id="<%= item.id %>">
		<p>
      <%= get_storage_badge(item.storage) %>
      <%= print_name(item.item_kind.name) %> 
    </p>
    <div class="controls">
      <%= text_field_tag :expiration, item.expiration.to_s, :class => 'expiration', :id => "expiration#{item.id}"%>
      <%= link_to item_path(item.id), :method => :delete, :remote => true, :class => "delete" do%>
      	<span>Remove</span>
      <%end%>
    </div>
</li>